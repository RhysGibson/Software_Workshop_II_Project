<div class="navbar">
  <a><i class="fa fa-ambulance" style="font-size:130%"></i><i class="fa fa-heart" style="font-size:130%"></i></a>
  <a style="padding-left: 70px"></a>
  <%= link_to "Home", root_path %>
  <%= link_to "Records", site_records_path %>
  <%= link_to "Prescriptions", site_prescriptions_path %>
  <%= link_to "Clinics", site_findClinics_path %>
  <%= link_to "Support", site_accountSupport_path %>
  <%= link_to "Feedback", site_feedback_path %>
  <a href="#account">Account</a>
  <div class="dropdown">
    <button class="settingsButton">Settings
      <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-content">
      <%= link_to "High Visibility", site_highVisibility_path %>
      <%= link_to "Loved Ones", site_lovedOnes_path %>
      <%= link_to "Notifications", site_notifications_path %>
      <% if logged_in? %>
      <%= link_to "Log Out", logout_path, method: :delete %>
      <% else %>
      <%= link_to "Log In", login_path %>
      <% end %>
    </div>
  </div>

  <a><i class="fa fa-microphone" style="font-size:120%"></i></a>

  <div class="search-container">
    <form action="/action_page.php">
      <input type="text" placeholder="Search.." name="search">
      <button type="submit"><i class="fa fa-search"></i></button>
    </form>
  </div>
</div>

<% provide(:title, "Log in") %>


<div class="row" id="logIn">
  <div class="col-md-6 col-md-offset-3" id="logInContainer">
    <%= form_for(:session, url: login_path) do |f| %>
      <h1 style="align: centre;">Sign In</h1>
      <b><%= f.label :email %></b>
      <br>
      <%= f.email_field :email, class: 'form-control', :style => "font-size: 20px; border: 1px solid; width: 150%" %>
      <br>
      <br>
      <b><%= f.label :password %></b>
      <br>
      <%= f.password_field :password, class: 'form-control', :style => "font-size: 20px; border: 1px solid; width: 150%" %>
      <br>
      <br>
      <%= f.submit "Log in", class: 'logInButton' %>
    <% end %>
  </div>
</div>
